// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Customer {
  id           Int           @id @default(autoincrement())
  userId       String        @unique
  email        String        @unique
  name         String
  appointments Appointment[]
  cars         Car[]
}

model Appointment {
  id         Int      @id @default(autoincrement())
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  customerId Int
  vehicleId  String
  car        Car      @relation(fields: [vehicleId], references: [vehicleId], onDelete: Cascade)
  service    String
  start      DateTime
  end        DateTime
}

model Car {
  vehicleId   String        @id
  model       String
  customerId  Int
  customer    Customer      @relation(fields: [customerId], references: [id], onDelete: Cascade)
  Appointment Appointment[]
}
